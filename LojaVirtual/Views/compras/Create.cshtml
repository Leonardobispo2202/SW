@model LojaVirtual.Models.compra

@{
    ViewBag.Title = "Comprar";
}

<h2>@ViewBag.Title</h2>            
<div class="alert alert-dismissible alert-info">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    O <strong>valor final</strong> será exibido em <a href="~/compras" class="alert-link">"Carrinho de Compras"</a>, após confirmação da quantidade de produtos.
</div>

<table>
    <tr>
        <td width="500">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />

                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.ID, "Produto", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("ID", (IEnumerable<SelectListItem>)ViewBag.ID, new { @class = "form-control" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Quantidade, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Quantidade, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Quantidade)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Confirmar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </td>
    </tr>
</table>
<div>
    @Html.ActionLink("Voltar", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
