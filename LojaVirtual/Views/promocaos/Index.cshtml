@model IEnumerable<LojaVirtual.Models.promocao>

@{
    ViewBag.Title = "Promoções";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Criar nova Promoção", "Create")
</p>
<table class="table table-hover">
    <tr class="table-active">
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="table-active">
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
